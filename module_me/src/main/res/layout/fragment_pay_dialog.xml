<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/withe"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pay_way_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#F7F7F7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:text="@string/please_select_pay_way"
        android:textColor="#666666"
        android:textSize="16sp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11">

        <ImageView
            android:id="@+id/wechat_pay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@mipmap/wechat_pay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wechat_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:gravity="center_vertical"
            android:text="@string/wechat_pay_way"
            android:textColor="#1B1717"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/wechat_pay_iv"
            app:layout_constraintLeft_toRightOf="@+id/wechat_pay_iv"
            app:layout_constraintTop_toTopOf="@+id/wechat_pay_iv" />

        <ImageView
            android:id="@+id/wechat_pay_check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/wechat_pay_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/wechat_pay_iv"
            tools:background="@mipmap/single_selection_x" />

        <View
            android:id="@+id/divider_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E8E8E8"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11"
        android:visibility="gone">

        <ImageView
            android:id="@+id/alipay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@mipmap/alipay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alipay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:gravity="center_vertical"
            android:text="@string/alipay_way"
            android:textColor="#1B1717"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/alipay_iv"
            app:layout_constraintLeft_toRightOf="@+id/alipay_iv"
            app:layout_constraintTop_toTopOf="@+id/alipay_iv" />

        <ImageView
            android:id="@+id/alipay_check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/alipay_iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/alipay_iv"
            tools:background="@mipmap/single_selection_m" />

        <View
            android:id="@+id/divider_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#E8E8E8"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/go_pay_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="#F3A230"
        android:gravity="center"
        android:text="@string/go_to_pay"
        android:textColor="@color/withe"
        android:textSize="17sp" />
</LinearLayout>