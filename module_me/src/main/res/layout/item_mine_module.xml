<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/module_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/orders" />

    <TextView
        android:id="@+id/module_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:textColor="#222222"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/module_iv"
        app:layout_constraintLeft_toRightOf="@+id/module_iv"
        app:layout_constraintTop_toTopOf="@+id/module_iv"
        tools:text="自助寻车" />

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@mipmap/icon_my_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/module_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/module_iv" />

    <TextView
        android:id="@+id/order_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:textColor="#999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/module_iv"
        app:layout_constraintRight_toLeftOf="@+id/right_iv"
        app:layout_constraintTop_toTopOf="@+id/module_iv"
        tools:text="1个待付款" />

    <View
        android:id="@+id/divider_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E1E1E1"
        app:layout_constraintTop_toBottomOf="@+id/module_iv" />

    <View
        android:id="@+id/divider_line2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@+id/divider_line1" />
</android.support.constraint.ConstraintLayout>